{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/tirgo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/tirgo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/tirgo",
  "projects": {
    "tirgo": {
      "type": "application",
      "root": "apps/tirgo",
      "entryFile": "main",
      "sourceRoot": "apps/tirgo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tirgo/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    },
    "shared-modules": {
      "type": "library",
      "root": "libs/shared-modules",
      "entryFile": "index",
      "sourceRoot": "libs/shared-modules/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared-modules/tsconfig.lib.json"
      }
    },
    "orders": {
      "type": "application",
      "root": "apps/orders",
      "entryFile": "main",
      "sourceRoot": "apps/orders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/orders/tsconfig.app.json"
      }
    },
    "references": {
      "type": "application",
      "root": "apps/references",
      "entryFile": "main",
      "sourceRoot": "apps/references/src",
      "compilerOptions": {
        "tsConfigPath": "apps/references/tsconfig.app.json"
      }
    },
    "finance": {
      "type": "application",
      "root": "apps/finance",
      "entryFile": "main",
      "sourceRoot": "apps/finance/src",
      "compilerOptions": {
        "tsConfigPath": "apps/finance/tsconfig.app.json"
      }
    }
  }
}